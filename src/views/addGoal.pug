extends layouts/main.pug

block content
    .form-container
        .project__container
        form(action=routes.addGoal(pro._id), method="post")
            .project__upload
            span 시작일
                input(type="date", name="start", placeholder="시작일", required=true)
            span 마감일
                input(type="date", name="due", placeholder="마감일", required=true)
            span 목표내용
                input(type="text", name="goalName", placeholder="목표 이름", required=true)
            input(type="submit", value="업무 추가")